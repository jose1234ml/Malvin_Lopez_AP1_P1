@page "/Registro/Index"

<PageTitle>Registro</PageTitle>

<section class="container card shadow-lg rounded mt-4 p-0">
  
    <header class="bg-light py-4 px-4 position-relative border-bottom">
        <h4 class="m-0 position-absolute start-50 top-50 translate-middle text-center">Consulta de Registro</h4>
        <a href="/Registro/Crear" class="btn btn-success position-absolute end-0 top-50 translate-middle-y me-3">
            <i class="bi bi-plus-square me-1"></i> Crear
        </a>
    </header>

    <div class="card-body">
        
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label fw-bold">Filtrar por</label>
                <select class="form-select">
                    <option disabled selected>Seleccione una opción</option>
                    <option value="Id">Id</option>
                    <option value="Nombre">Nombre</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Búsqueda</label>
                <div class="input-group">
                    <input class="form-control" placeholder="Buscador" />
                    <button class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Desde</label>
                <input type="date" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold">Hasta</label>
                <input type="date" class="form-control" />
            </div>
        </div>

     
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Registro Id</th>
                        <th class="text-end">Modificar</th> 
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td class="text-end">
                           
                            <a href="/Registro/Modificar/1" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td class="text-end">
                           
                            <a href="/Registro/Modificar/2" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <div>
                <label class="fw-bold">Contador:</label>
                <span>2</span>
            </div>
            <div>
                <label class="fw-bold">Total:</label>
                <span>2</span>
            </div>
        </div>
    </div>

    
    <header class="bg-light py-2 px-4 border-top">
        <h5 class="m-0 text-center"></h5>
    </header>

</section>
